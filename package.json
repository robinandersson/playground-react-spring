{
  "name": "playground-react-spring",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "css:build": "postcss src/styles/main.css -o src/index.build.css",
    "css:watch": "postcss src/styles/main.css -o src/index.build.css -w",
    "js:build": "react-scripts build",
    "js:start": "react-scripts start",
    "build": "npm run css:build && npm run js:build",
    "start": "npm run css:watch & npm run js:start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.0.5"
  }
}
